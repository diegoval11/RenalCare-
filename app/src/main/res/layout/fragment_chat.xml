<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/renal_light_cream"
    tools:context=".ui.chat.ChatFragment">

    <!-- PestaÃ±as para cambiar entre Chat IA y Chat Humano -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/chat_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/renal_blue_gray"
        app:tabTextColor="@color/renal_sand_light"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/renal_sand"
        app:tabMode="fixed"
        app:tabGravity="fill"/>

    <!-- Contenedor para los fragmentos de chat (IA y Humano) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/chat_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>