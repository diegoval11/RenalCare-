<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="24dp"
android:background="@color/renal_light_cream"
tools:context=".auth.LoginActivity">

<ImageView
    android:id="@+id/imgLogo"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginTop="60dp"
    android:src="@drawable/ic_launcher_foreground"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tint="@color/renal_dark_green" />

<TextView
    android:id="@+id/tvAppName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="RenalCare+"
    android:textSize="32sp"
    android:textStyle="bold"
    android:textColor="@color/renal_dark_green"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/imgLogo" />

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/tilDui"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:hint="@string/hint_dui"
    android:textColorHint="@color/renal_dark_gray"
    app:boxStrokeColor="@color/renal_dark_green"
    app:hintTextColor="@color/renal_dark_green"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvAppName">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etDui"
        android:maxLength="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@color/renal_dark_gray" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/tilPin"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:hint="@string/hint_pin"
    android:textColorHint="@color/renal_dark_gray"
    app:boxStrokeColor="@color/renal_dark_green"
    app:hintTextColor="@color/renal_dark_green"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tilDui"
    app:passwordToggleEnabled="true"
    app:passwordToggleTint="@color/renal_dark_green">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:textColor="@color/renal_dark_gray" />
</com.google.android.material.textfield.TextInputLayout>

<Button
    android:id="@+id/btnLogin"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:text="@string/action_login"
    android:padding="12dp"
    android:textSize="16sp"
    android:backgroundTint="@color/renal_dark_green"
    android:textColor="@color/renal_light_cream"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tilPin" />

<TextView
    android:id="@+id/tvGoToSignup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/prompt_no_account"
    android:padding="8dp"
    android:textSize="16sp"
    android:textColor="@color/renal_blue_gray"
    android:textStyle="bold"
    android:layout_marginTop="24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>