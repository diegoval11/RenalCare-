<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_usuario"
        android:contentDescription="Avatar"
        android:scaleType="centerInside"
        android:background="@drawable/bg_avatar"
        android:layout_marginRight="12dp" />

    <!-- Contenedor de info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Título de conversación -->
        <TextView
            android:id="@+id/tv_conversacion_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Último mensaje -->
        <TextView
            android:id="@+id/tvUltimoMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Último mensaje aquí..."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Contenedor derecho (hora y badge) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp">

        <!-- Fecha/Hora de conversación -->
        <TextView
            android:id="@+id/tv_conversacion_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Badge de no leídos -->
        <TextView
            android:id="@+id/tvNoLeidos"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="3"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_badge_no_leidos"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>