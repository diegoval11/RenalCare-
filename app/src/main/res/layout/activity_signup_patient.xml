<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/renal_light_cream"
    tools:context=".auth.SignupPatientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_signup_patient"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/renal_dark_green"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Sección 1: Datos Personales -->
        <TextView style="@style/SignupSectionHeader" android:text="@string/patient_section_personal"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNombrePaciente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_full_name"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombrePaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDuiPaciente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_dui"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDuiPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPinPaciente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_pin_numeric"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPinPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPinConfirmPaciente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_pin_confirm"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPinConfirmPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:textColor="@color/renal_dark_gray" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sección 2: Condición Médica -->
        <TextView style="@style/SignupSectionHeader" android:text="@string/patient_section_medical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_medical_q1"
            android:textColor="@color/renal_dark_gray"/>
        <RadioGroup
            android:id="@+id/rgTipoInsuficiencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/rbCronica" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_medical_opt1" android:textColor="@color/renal_dark_gray"/>
            <RadioButton android:id="@+id/rbAguda" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_medical_opt2" android:textColor="@color/renal_dark_gray"/>
            <RadioButton android:id="@+id/rbNoSe" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_medical_opt3" android:textColor="@color/renal_dark_gray"/>
        </RadioGroup>

        <!-- Sección 3: Medicación (¡MODIFICADA!) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView style="@style/SignupSectionHeader"
                android:text="@string/patient_section_meds"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="24dp"/>
            <ImageButton
                android:id="@+id/btnMedicationInfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_dialog_info"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="16dp"
                app:tint="@color/renal_blue_gray"
                android:contentDescription="Información de medicamentos"/>
        </LinearLayout>

        <!-- Contenedor dinámico para las filas de medicamentos -->
        <LinearLayout
            android:id="@+id/containerMedicamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <!-- Botón para agregar nueva fila de medicamento -->
        <Button
            android:id="@+id/btnAddMedicamento"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Agregar Medicamento"
            android:textColor="@color/renal_dark_green"
            android:textSize="14sp"
            android:layout_gravity="start"/>

        <!-- Botón para omitir esta sección -->
        <Button
            android:id="@+id/btnSkipMedicamentos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mi doctor decidirá esto"
            android:textSize="14sp"
            app:strokeColor="@color/renal_blue_gray"
            android:textColor="@color/renal_blue_gray" />

        <!-- Texto que aparece si se omite -->
        <TextView
            android:id="@+id/tvMedsOmitidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✓ Medicamentos serán añadidos por tu doctor."
            android:textColor="@color/success_green"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>

        <!-- Sección 4: Dieta y Líquidos -->
        <TextView style="@style/SignupSectionHeader" android:text="@string/patient_section_diet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_diet_q1"
            android:textColor="@color/renal_dark_gray"/>
        <CheckBox android:id="@+id/cbBajoSodio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_diet_opt1" android:textColor="@color/renal_dark_gray"/>
        <CheckBox android:id="@+id/cbBajoPotasio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_diet_opt2" android:textColor="@color/renal_dark_gray"/>
        <CheckBox android:id="@+id/cbBajoFosforo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_diet_opt3" android:textColor="@color/renal_dark_gray"/>
        <CheckBox android:id="@+id/cbBajoProteinas" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_diet_opt4" android:textColor="@color/renal_dark_gray"/>

        <!-- Sección 5: Diálisis -->
        <TextView style="@style/SignupSectionHeader" android:text="@string/patient_section_dialysis"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_dialysis_q1"
            android:textColor="@color/renal_dark_gray"/>
        <RadioGroup
            android:id="@+id/rgTipoDialisis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/rbHemodialisis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_dialysis_opt1" android:textColor="@color/renal_dark_gray"/>
            <RadioButton android:id="@+id/rbPeritoneal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_dialysis_opt2" android:textColor="@color/renal_dark_gray"/>
            <RadioButton android:id="@+id/rbNinguna" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/renal_dark_green" android:text="@string/patient_dialysis_opt3" android:textColor="@color/renal_dark_gray"/>
        </RadioGroup>

        <!-- Sección 6: Contacto de Emergencia -->
        <TextView style="@style/SignupSectionHeader" android:text="@string/patient_section_contact"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/patient_contact_hint_name"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/patient_contact_hint_phone"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelefonoContacto"
                android:maxLength="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón de Registro -->
        <Button
            android:id="@+id/btnRegisterPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="@string/action_register"
            android:backgroundTint="@color/renal_dark_green"
            android:textColor="@color/renal_light_cream"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>