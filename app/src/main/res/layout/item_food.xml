<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/ivFoodPhoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            app:layout_constraintStart_toEndOf="@id/ivFoodPhoto"
            app:layout_constraintTop_toTopOf="@id/ivFoodPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Pechuga de Pollo" />

        <TextView
            android:id="@+id/tvFoodTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:background="@drawable/rounded_background_green"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvFoodName"
            app:layout_constraintTop_toBottomOf="@id/tvFoodName"
            android:layout_marginTop="4dp"
            tools:text="Apto para dieta renal" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivFoodPhoto" />

        <LinearLayout
            android:id="@+id/layoutNutrientes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SODIO"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/info_blue"/>
                <TextView
                    android:id="@+id/tvFoodSodio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68 mg"
                    android:textSize="14sp"
                    android:textColor="@color/renal_dark_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POTASIO"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning_yellow"/>
                <TextView
                    android:id="@+id/tvFoodPotasio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="256 mg"
                    android:textSize="14sp"
                    android:textColor="@color/renal_dark_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FÓSFORO"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/error_red"/>
                <TextView
                    android:id="@+id/tvFoodFosforo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="228 mg"
                    android:textSize="14sp"
                    android:textColor="@color/renal_dark_gray"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layoutNutrientes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes:"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvFoodIngredientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/renal_dark_gray"
                tools:text="1 pechuga de pollo (100g), 1 cdta. de aceite de oliva, hierbas finas (sin sal)." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receta:"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvFoodReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/renal_dark_gray"
                tools:text="Sazonar el pollo con hierbas finas. Calentar el aceite en una sartén y cocinar la pechuga por ambos lados..." />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>