<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            style="@style/SignupSectionHeader"
            android:layout_width="match_parent"
            android:text="Paso 1: Crea tu cuenta"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNombrePaciente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_full_name"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombrePaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDuiPaciente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_dui"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDuiPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTelefonoUsuario"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Tu teléfono personal"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelefonoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="8"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_password_new"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green"
            app:helperText="Mínimo 5 caracteres"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/renal_dark_gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPasswordConfirm"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_password_confirm"
            android:textColorHint="@color/renal_dark_gray"
            app:boxStrokeColor="@color/renal_dark_green"
            app:hintTextColor="@color/renal_dark_green"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/renal_dark_green">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/renal_dark_gray" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</ScrollView>