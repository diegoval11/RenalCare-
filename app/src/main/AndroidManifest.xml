    <application
        android:usesCleartextTraffic="true"
        >

        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.RenalCare"> <intent-filter>
            <action android:name="android.intent.action.MAIN" />
