        </intent-filter>
        </activity>

        <activity
            android:name=".auth.RoleSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.RenalCare" />
        <activity
            android:name=".auth.SignupCaregiverActivity"
            android:exported="false"
            android:theme="@style/Theme.RenalCare" />
        <activity
            android:name=".auth.SignupPatientActivity"
            android:exported="false"
            android:theme="@style/Theme.RenalCare" />



        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RenalCare">
        </activity>

    </application>

</manifest>